{
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "removeComments": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/__tests__/**/*"]
}
